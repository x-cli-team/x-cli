#!/usr/bin/env sh

# Allow smart-push script to bypass this check
if [ "$SMART_PUSH_BYPASS" = "true" ]; then
  exit 0
fi

# Get the remote and branch being pushed to
remote="$1"
url="$2"

# Read stdin to get ref info
while read local_ref local_sha remote_ref remote_sha; do
  # Extract branch name from ref
  branch_name=$(echo "$remote_ref" | sed 's/refs\/heads\///')
  
  # Check if pushing to main branch
  if [ "$remote_ref" = "refs/heads/main" ]; then
    echo ""
    echo "ğŸš¨ BLOCKED: Direct push to main branch detected!"
    echo ""
    echo "âœ… Use smart push instead:"
    echo "   git pushup"
    echo "   npm run smart-push"
    echo "   ./scripts/smart-push.sh"
    echo ""
    echo "âŒ DON'T use: git push origin main"
    echo ""
    echo "ğŸ’¡ Smart push handles automated version bumps and prevents conflicts"
    echo "ğŸ“– See .agent/sop/git-workflow.md for details"
    echo ""
    exit 1
  fi
  
  # For other branches, run basic quality checks
  echo "ğŸ” Running pre-push checks for branch: $branch_name"
  
  # Quick TypeScript check
  echo "ğŸ“ Checking TypeScript..."
  if ! npm run typecheck >/dev/null 2>&1; then
    echo "âŒ TypeScript check failed - please fix errors before pushing"
    echo "ğŸ’¡ Run: npm run typecheck"
    exit 1
  fi
  
  # Quick lint check
  echo "ğŸ§¹ Running ESLint..."
  if ! npm run lint >/dev/null 2>&1; then
    echo "âŒ ESLint check failed - please fix linting errors before pushing"
    echo "ğŸ’¡ Run: npm run lint"
    exit 1
  fi
  
  echo "âœ… Pre-push checks passed for $branch_name"
done

exit 0